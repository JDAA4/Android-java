<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- EditText para ingresar el valor a convertir -->
    <EditText
        android:id="@+id/editTextValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor a convertir"
        android:inputType="numberDecimal"
        android:textSize="18sp"/>

    <!-- TextView para unidad origen -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione unidad origen"
        android:textSize="16sp"
        android:paddingTop="16dp"/>

    <!-- Spinner para la unidad de origen -->
    <Spinner
        android:id="@+id/spinnerFrom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- TextView para unidad destino -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione unidad destino"
        android:textSize="16sp"
        android:paddingTop="16dp"/>

    <!-- Spinner para la unidad de destino -->
    <Spinner
        android:id="@+id/spinnerTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Botón de conversión -->
    <Button
        android:id="@+id/btnConvert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convertir"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <!-- TextView para mostrar el resultado -->
    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp"/>

    <Button
        android:id="@+id/btnDivisas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir Convertidor de Divisas"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>
</LinearLayout>